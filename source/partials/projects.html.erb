<div class="row my-5">
  <div class="col-12">
    <div class="container projects-container">
      <div id="projects">
        <h2> Projects</h2>
        <div class="row">
          <div class="cards col-6">
            <%# TODO make the projects scrollable %>
            <% data.projects.each do |project| %>
              <div class="card-product card-transition <%= project.className%> ">
                <%= image_tag project.image, alt: "project image" %>
                <div class="card-product-infos w-100">
                  <div class="d-flex justify-content-between align-items-center small-screen">
                    <h2><%= project.name %></h2>
                    <% link_to project.url, class: 'external-link', target: '_blank' do %>
                      <i class="fas fa-external-link-alt"></i>
                    <% end %>
                  </div>
                  <p class="hidden-description"><%= project.description %></p>
                </div>
              </div>
            <% end %>
          </div>
          <div class="col-6 my-relative">
            <% data.projects.each do |project| %>
              <%= image_tag project.image, alt: "project image", class: "display-project display-#{project.className}"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="javascripts/projectMove.js"></script>
</div>
